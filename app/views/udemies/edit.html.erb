<div class="container">
<div class="row">
<%= simple_form_for([@udemy]) do |form| %>
<%= form.input :title, input_html: {class: "form-control"} %>
<%= form.input :description, input_html: {class: "form-control"} %>
<%= form.input :count, input_html: {class: "form-control"} %>
<%= form.input :price, input_html: {class: "form-control"} %>
<%= form.input :rating, input_html: {class: "form-control"} %>
<%= form.input :our_rating, input_html: {class: "form-control"} %>
<%= form.input :contact, input_html: {class: "form-control"} %>
<%= form.input :done, input_html: {class: "form-control"} %>
<%= form.submit %>
<% end %>
</div>
</div>